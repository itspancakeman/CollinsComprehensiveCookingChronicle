<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/user-pages/profile.css">
</head>
<body>

    <% if (alerts.success) { %>
      <% alerts.success.forEach(msg => { %>
         
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (alerts.error) { %>
      <% alerts.error.forEach(msg => { %>
       <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
  <% } %>

  <header>
    <div class="logo">
      <div class="logo-img">
          <img src="/Screenshots/logo.png" alt="logo-img"> 
      </div>
      <h3 class="app-name">Collin'sComprehensiveCookingChronicle</h3>
    </div>
    <nav class="navbar">
      <ul>
        <li id="navbar"><a href="/">Home</a></li>
          <% if(!currentUser) { %> 
          <li id="navbar"><a href="/auth/signup">Signup</a></li>
          <li id="navbar"><a href="/auth/login">Login</a></li>
          <% } else { %> 
          <li id="navbar"><a href="/auth/logout">Logout</a></li>
          <li id="navbar"><a href="/profile">Profile</a></li>
          <% } %> 
          <li id="navbar"><a href="/ingredients">Ingredients</a></li>
          <li id="navbar"><a href="/recipes">Recipes</a></li>
          <li id="navbar"><a href="/blogs">Blogs</a></li>
      </ul>
    </nav>
    
    <div class="profile-header">
      <h2 class="heading">Welcome to your <span>Profile!</span></h2>
    </div>

  </header>
  
    
    <div class="input-box">
        <h3>Name: <span><%= currentUser.name %></h3>
        <h3>Email: <span><%= currentUser.email %></h3>
        <h3>Phone: <span><%= currentUser.phone %></h3>
    </div>

  <div class="profile-box">

    <div class="saved-recipes">
      <h2 id="saved-recipes">Saved Recipes</h2>
      <div class='link-box'>
        <a href="#">Saved Recipe #1</a>
        <a href="#">Saved Recipe #2</a>
        <a href="#">Saved Recipe #3</a>
      </div>
    </div>

    <div class="saved-blogs">
      <h2 id="saved-blogs">Saved Blog Posts</h2>
      <div class='link-box'>
        <a href="#">Saved Blog Post #1</a>
        <a href="#">Saved Blog Post #2</a>
        <a href="#">Saved Blog Post #3</a>
      </div>
    </div>

</div>

</body>
</html>