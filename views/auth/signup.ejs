<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/user-pages/signup.css">
</head>
<body>
    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
    
    <header>
      <div class="logo">
        <div class="logo-img">
            <img src="/Screenshots/logo.png" alt="logo-img"> 
        </div>
        <h3 class="app-name">Collin'sComprehensiveCookingChronicle</h3>
      </div>
      <nav class="navbar">
        <ul>
          <li id="navbar"><a href="/">Home</a></li>
          <% if(!currentUser) { %> 
          <li id="navbar"><a href="/auth/signup">Signup</a></li>
          <li id="navbar"><a href="/auth/login">Login</a></li>
          <% } else { %> 
          <li id="navbar"><a href="/auth/logout">Logout</a></li>
          <li id="navbar"><a href="/profile">Profile</a></li>
          <% } %> 
          <li id="navbar"><a href="/ingredients">Ingredients</a></li>
          <li id="navbar"><a href="/recipes">Recipes</a></li>
          <li id="navbar"><a href="/blogs">Blogs</a></li>
        </ul>
      </nav>

      <div class="signup-header">
        <h2 class="heading">Let's <span>Sign Up!</span></h2>
      </div>

    </header>

    <div class="form-box">
        <form action="/auth/signup" method="POST">
            <div class="signup-form" id="top-form">
                <input type="text" placeholder="Name" name="name" required>
                <input type="text" placeholder="Phone Number xxx-xxx-xxxx" name="phone" required>
            </div>
            <div class="signup-form">
                <input type="email" placeholder="Email" name="email">
                <input type="password" placeholder="Password" name="password">
            </div>
            <div class="signup-form" id="submitButton">
            <input type="submit" value="Sign Up" class="btn">
            </div>
        </form>
    </div>

</body>
</html>