<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/data-pages/editblog.css">
    <title>Edit Post</title>
</head>
<body>
    <% if (alerts.success) { %>
        <% alerts.success.forEach(msg => { %>
           
          <div class="alert alert-success"><%= msg %></div>
        <% }) %>
      <% } %>
  
      <% if (alerts.error) { %>
        <% alerts.error.forEach(msg => { %>
         <div class="alert alert-danger"><%= msg %></div>
        <% }) %>
    <% } %>
  
    <header>
      <div class="logo">
            <img src="/Screenshots/logo.png" alt="logo-img"> 
        <h3 class="app-name">Collin'sComprehensiveCookingChronicle</h3>
      </div>
      <nav class="navbar">
        <ul>
          <li id="navbar"><a href="/">Home</a></li>
          <% if(!currentUser) { %> 
          <li id="navbar"><a href="/auth/signup">Signup</a></li>
          <li id="navbar"><a href="/auth/login">Login</a></li>
          <% } else { %> 
          <li id="navbar"><a href="/auth/logout">Logout</a></li>
          <li id="navbar"><a href="/profile">Profile</a></li>
          <% } %> 
          <li id="navbar"><a href="/ingredients">Ingredients</a></li>
          <li id="navbar"><a href="/recipes">Recipes</a></li>
          <li id="navbar"><a href="/blogs">Blogs</a></li>
        </ul>
      </nav>

      <div class="edit-blog-header">
        <h1 class="heading">EDIT BLOG</h1>
      </div>

    </header>

    <div class="edit-container">
        <div class="edit-form">

            <form action="/blogs/<%= blog.id %>/?_method=PUT" method="POST">
            
                <div class="edit-blog-form">
                    <div id="editBlogHeader">
                      <h3 class="form-label">Make changes here</h3>
                    </div>
                </div>

                <div class="edit-blog-form">
                    <label for="title" class="form-label">title:</label>
                    <input type="text" class="blog-title" id="title" name="title" value="<%= blog.title %>">
                </div>

                <div class="edit-blog-form">
                  <label for="post" class="form-label" id="text-box">Text Section #1 -- </label>
                  <textarea class="form-control" id="post" name="post"><%= blog.content.post %></textarea>
                </div>
  
                <div class="edit-blog-form">
                  <label for="post2" class="form-label" id="text-box">Text Section #2 -- </label>
                  <textarea class="form-control" id="post2" name="post2"><%= blog.content.post2 %></textarea>
                </div>

                <div class="edit-blog-form">
                    <input type="submit" class="form-control" id="button">
                </div>

            </form>

        </div>

    </div>

</body>
</html>